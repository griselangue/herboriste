<p id="notice"><%= notice %></p>

<h1>Poisons</h1>

<table>
  <thead>
    <tr>
      <th>Action</th>
      <th>Medium</th>
      <th>Toxicite</th>
      <th>Partieplante</th>
      <th>Infocomplementaire</th>
      <th>Plante</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @poisons.each do |poison| %>
      <tr>
        <td><%= poison.action %></td>
        <td><%= poison.medium %></td>
        <td><%= poison.toxicite %></td>
        <td><%= poison.partiePlante %></td>
        <td><%= poison.infoComplementaire %></td>
        <td><%= poison.plante.nomScientifique %></td>
        <td><%= link_to 'Show', plante_poison_path(@plante, poison) %></td>
        <td><%= link_to 'Edit', edit_plante_poison_path(@plante, poison) %></td>
        <td><%= link_to 'Destroy', [@plante, poison], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

